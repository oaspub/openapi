{
  "name": "@oaspub/openapi",
  "version": "0.0.1",
  "description": "OpenAPI types, schemas, and validators - powered by TypeBox.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "ts-standard --verbose | snazzy",
    "lint:fix": "ts-standard --fix --verbose | snazzy",
    "test": "ava",
    "test:coverage": "c8 ava"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.27.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^16.18.11",
    "ava": "^5.1.1",
    "c8": "^7.12.0",
    "snazzy": "^9.0.0",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oaspub/oaschemas.git"
  },
  "keywords": [
    "oaspub",
    "openapi",
    "classes",
    "schemas",
    "validation"
  ],
  "author": "Spencer Tuft <stuft2@protonmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oaspub/oaschemas/issues"
  },
  "homepage": "https://github.com/oaspub/oaschemas#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "test/**/*.spec.ts"
    ]
  }
}
